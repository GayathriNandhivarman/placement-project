import React, { useState } from "react";

function App() {
  const [inventory, setInventory] = useState([]);
  const [form, setForm] = useState({
    id: "",
    name: "",
    sku: "",
    category: "",
    quantity: "",
    supplier: "",
    price: "",
    location: "",
  });
  const [editId, setEditId] = useState(null);

  // Handle input changes
  const handleChange = (e) => {
    setForm({ ...form, [e.target.name]: e.target.value });
  };

  // Add or update inventory
  const handleSubmit = (e) => {
    e.preventDefault();

    if (
      !form.name ||
      !form.sku ||
      !form.category ||
      !form.quantity ||
      !form.supplier ||
      !form.price ||
      !form.location
    ) {
      alert("Please fill all fields!");
      return;
    }

    if (editId !== null) {
      setInventory(
        inventory.map((item) =>
          item.id === editId ? { ...form, id: editId } : item
        )
      );
      setEditId(null);
    } else {
      setInventory([...inventory, { ...form, id: Date.now() }]);
    }

    setForm({
      id: "",
      name: "",
      sku: "",
      category: "",
      quantity: "",
      supplier: "",
      price: "",
      location: "",
    });
  };

  // Edit inventory item
  const handleEdit = (item) => {
    setForm(item);
    setEditId(item.id);
  };

  // Delete inventory item
  const handleDelete = (id) => {
    if (window.confirm("Are you sure you want to delete this item?")) {
      setInventory(inventory.filter((item) => item.id !== id));
    }
  };

  return (
    <div className="min-h-screen bg-gray-100 p-6">
      <h1 className="text-3xl font-bold text-center mb-6 text-blue-700">
        Inventory Management System
      </h1>

      {/* Inventory Form */}
      <form
        onSubmit={handleSubmit}
        className="bg-white shadow-lg rounded-xl p-6 max-w-3xl mx-auto mb-10"
      >
        <h2 className="text-xl font-semibold mb-4 text-gray-700">
          {editId ? "Update Inventory" : "Add New Inventory"}
        </h2>

        <div className="grid grid-cols-2 gap-4">
          <input
            className="p-2 border rounded-lg"
            placeholder="Product Name"
            name="name"
            value={form.name}
            onChange={handleChange}
          />
          <input
            className="p-2 border rounded-lg"
            placeholder="SKU"
            name="sku"
            value={form.sku}
            onChange={handleChange}
          />
          <input
            className="p-2 border rounded-lg"
            placeholder="Category"
            name="category"
            value={form.category}
            onChange={handleChange}
          />
          <input
            className="p-2 border rounded-lg"
            placeholder="Quantity"
            name="quantity"
            type="number"
            value={form.quantity}
            onChange={handleChange}
          />
          <input
            className="p-2 border rounded-lg"
            placeholder="Supplier"
            name="supplier"
            value={form.supplier}
            onChange={handleChange}
          />
          <input
            className="p-2 border rounded-lg"
            placeholder="Price"
            name="price"
            type="number"
            value={form.price}
            onChange={handleChange}
          />
          <input
            className="p-2 border rounded-lg col-span-2"
            placeholder="Location"
            name="location"
            value={form.location}
            onChange={handleChange}
          />
        </div>

        <button
          type="submit"
          className="mt-5 bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition"
        >
          {editId ? "Update Item" : "Add Item"}
        </button>
      </form>

      {/* Inventory Table */}
      <div className="max-w-5xl mx-auto bg-white shadow-md rounded-xl p-6">
        <h2 className="text-xl font-semibold mb-4 text-gray-700">
          Inventory List
        </h2>
        {inventory.length === 0 ? (
          <p className="text-gray-500 text-center">No items in inventory.</p>
        ) : (
          <table className="w-full text-sm border">
            <thead className="bg-blue-100">
              <tr>
                <th className="border p-2">Name</th>
                <th className="border p-2">SKU</th>
                <th className="border p-2">Category</th>
                <th className="border p-2">Qty</th>
                <th className="border p-2">Supplier</th>
                <th className="border p-2">Price</th>
                <th className="border p-2">Location</th>
                <th className="border p-2">Actions</th>
              </tr>
            </thead>
            <tbody>
              {inventory.map((item) => (
                <tr key={item.id} className="hover:bg-gray-50">
                  <td className="border p-2">{item.name}</td>
                  <td className="border p-2">{item.sku}</td>
                  <td className="border p-2">{item.category}</td>
                  <td className="border p-2">{item.quantity}</td>
                  <td className="border p-2">{item.supplier}</td>
                  <td className="border p-2">{item.price}</td>
                  <td className="border p-2">{item.location}</td>
                  <td className="border p-2 flex gap-2 justify-center">
                    <button
                      className="bg-yellow-400 px-3 py-1 rounded-lg text-white hover:bg-yellow-500"
                      onClick={() => handleEdit(item)}
                    >
                      Edit
                    </button>
                    <button
                      className="bg-red-500 px-3 py-1 rounded-lg text-white hover:bg-red-600"
                      onClick={() => handleDelete(item.id)}
                    >
                      Delete
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        )}
      </div>
    </div>
  );
}

export default App;
